<%
  hash = {
          "Marine Le Pen" => l,
          "Emmanuel Macron" => m,
          "Jean Luc Mélenchon" => j,
          "François Fillon" => f,
          "Benoît Hamon" => h,
  }
 %>

        <% @opinions.each do |opinion| %>
        <% if opinion.card.candidate == "Marine Le Pen" %>
             <% hash["Marine Le Pen"] += opinion.rate %>
        <% elsif opinion.card.candidate == "Emmanuel Macron" %>
             <% hash["Emmanuel Macron"] += opinion.rate %>
        <% elsif opinion.card.candidate == "Jean Luc Mélenchon" %>
             <% hash["Jean Luc Mélenchon"] += opinion.rate %>
        <% elsif opinion.card.candidate == "François Fillon" %>
             <% hash["François Fillon"] += opinion.rate %>
        <% elsif opinion.card.candidate == "Benoît Hamon" %>
             <% hash["Benoît Hamon"] += opinion.rate %>
        <% end %>
        <% end %>


