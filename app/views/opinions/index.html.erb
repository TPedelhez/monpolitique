<h1>Opinions</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Card</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @opinions.each do |opinion| %>
      <tr>
        <td><%= opinion.user_id %></td>
        <td><%= opinion.card.description %></td>
        <td><%= opinion.rate %></td>
        <td><%= link_to 'Show', opinion %></td>
        <td><%= link_to 'Edit', edit_opinion_path(opinion) %></td>
        <td><%= link_to 'Destroy', opinion, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<h1>Opinions</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Marine Le Pen</th>
      <th>Emmanuel Macron</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <tr>



      </tr>
        <%  l = 0 %>
        <%  m = 0 %>
        <% @opinions.each do |opinion| %>
        <% if opinion.card.candidate == "Marine Le Pen" %>
             <% l += opinion.rate %>
        <% elsif opinion.card.candidate == "Emmanuel Macron" %>
             <% m += opinion.rate %>
        <% end %>
        <% end %>
        <p> <%= l %> </p>
        <p> <%= m %> </p>

  </tbody>
</table>

